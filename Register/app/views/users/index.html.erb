<fieldset>
    <%= form_tag(login_path, method: "post", class: "form-signin") do %>
        <h2 class="form-signin-heading">Sign in</h2>
        <p><%= label_tag(:email, "E-mail:", class: "sr-only") %></p>
        <p><%= email_field_tag(:email, nil, placeholder: "E-mail", class: 'form-control') %></p>

        <p><%= label_tag(:password, "Password:", class: "sr-only") %></p>
        <p><%= password_field_tag(:password, nil, placeholder: "Password", class: 'form-control') %></p>

        <p><%= submit_tag("Log in", class: "btn btn-lg btn-primary btn-block") %></p>
      <ul class="nav nav-pills">
        <li role="presentation"><%= link_to "Register", new_user_path %></li>
        <li role="presentation"><%= link_to "Sign in as Admin", new_user_path %></li>
      </ul>
    <% end %>
</fieldset>


